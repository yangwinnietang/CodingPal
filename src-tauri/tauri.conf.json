{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CodingPal",
  "version": "0.1.0",
  "identifier": "com.ai-coding-companion.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CodingPal",
        "width": 320,
        "height": 240,
        "minWidth": 280,
        "minHeight": 200,
        "maxWidth": 1000,
        "maxHeight": 700,
        "resizable": true,
        "maximizable": false,
        "minimizable": true,
        "closable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "center": false,
        "x": 100,
        "y": 100,
        "focus": true,
        "shadow": true,
        "visible": true
      ,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:codingpal.db"]
    },
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "process": {},
    "shell": {
      "open": false
    },
    "window-state": null,
    "notification": null,
    "global-shortcut": null
  }
}
